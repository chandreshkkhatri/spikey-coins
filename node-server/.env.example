# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=spikey_coins

# Alternative MongoDB Atlas connection (replace with your actual connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/spikey_coins?retryWrites=true&w=majority

# Server Configuration
PORT=8000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=24h

# Admin Setup Keys
# Used for creating the initial admin when database is empty
ADMIN_SETUP_KEY=your-setup-key-change-in-production

# Used for creating additional admin users (optional - defaults to ADMIN_SETUP_KEY if not set)
ADMIN_CREATE_KEY=your-admin-create-key-change-in-production

# Logging Level
LOG_LEVEL=info
