# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=spikey_coins

# Alternative MongoDB Atlas connection (replace with your actual connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/spikey_coins?retryWrites=true&w=majority

# Server Configuration
PORT=8000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=24h

# Admin Setup Keys
# Used for creating the initial admin when database is empty
ADMIN_SETUP_KEY=your-setup-key-change-in-production

# Used for creating additional admin users (optional - defaults to ADMIN_SETUP_KEY if not set)
ADMIN_CREATE_KEY=your-admin-create-key-change-in-production

# CoinGecko API Configuration
# Required for Binance-CoinGecko matcher functionality
COINGECKO_API_KEY=your-coingecko-api-key

# Logging Level
LOG_LEVEL=info

# Frontend Configuration
# Add your Vercel frontend URL here for CORS
FRONTEND_URL=https://your-app.vercel.app

# Gemini AI Configuration
# Required for AI features: chat, research, and article summarization
GEMINI_API_KEY=your_gemini_api_key_here

# AI Model Selection
# Options: gemini-2.5-flash (recommended, fast), gemini-2.5-pro (more capable), gemini-2.0-flash-exp
# Default: gemini-2.5-flash
AI_MODEL=gemini-2.5-flash

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Go to APIs & Services > Credentials
# 3. Create OAuth 2.0 Client ID (Web application)
# 4. Add authorized JavaScript origins (e.g., http://localhost:3000, https://your-app.vercel.app)
# 5. Add authorized redirect URIs if using redirect flow
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com